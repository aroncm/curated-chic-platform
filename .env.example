# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration (required for AI analysis)
OPENAI_API_KEY=your_openai_api_key

# Site URL (required for auth callbacks)
# For local development: http://localhost:3000
# For production: https://your-domain.vercel.app
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Node Environment (auto-set by Vercel)
NODE_ENV=development

# Zapier Integration (for email-to-database ingestion)
# Generate a secure random key for ZAPIER_API_KEY (e.g., openssl rand -hex 32)
ZAPIER_API_KEY=your_secure_api_key_here
# Email of the Supabase Auth user that will own imported items
# This user must exist in Supabase Auth before using the ingest endpoint
ZAPIER_IMPORT_USER_EMAIL=imports@yourdomain.com
